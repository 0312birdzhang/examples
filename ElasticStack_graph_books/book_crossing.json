{
  "template": "book_crossing*",
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas" : 0,
      "index.refresh_interval": "30s"
    },
    "mappings": {
      "_default_": {
        "dynamic_templates": [
        {
          "strings": {
            "match": "*",
            "match_mapping_type": "string",
            "mapping": {
              "type": "keyword"
            }
          }
        }
        ],
        "properties": {
          "isbn": {
            "type": "integer"
          },
          "rating": {
            "type": "integer"
          },
          "userId": {
            "type": "integer"
          },
          "authors": {
            "type": "keyword"
          },
          "liked": {
            "type": "keyword"
          },
          "disliked": {
            "type": "keyword"
          },
          "indifferent": {
            "type": "keyword"
          },
          "all_rated": {
            "type": "keyword"
          },
          "title": {
            "type": "text",
            "fields":{
              "raw": {
                "type":  "keyword"
              }
            }
          },
          "timestamp":{
            "type":"date",
            "format":"yyyy-MM-dd"
          }
        },
        "_all": {
          "enabled": true
        }
      }
    }
}