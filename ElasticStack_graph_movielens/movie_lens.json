{
  "template": "movie_lens*",
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas" : 0,
      "index.refresh_interval": "30s"
    },
    "mappings": {
      "_default_": {
        "dynamic_templates": [
        {
          "strings": {
            "match": "*",
            "match_mapping_type": "string",
            "mapping": {
              "type": "keyword"
            }
          }
        }
        ],
        "properties": {
          "movieId": {
            "type": "integer"
          },
          "rating": {
            "type": "scaled_float",
            "scaling_factor": 10
          },
          "userId": {
            "type": "integer"
          },
          "genres": {
            "type": "keyword"
          },
          "liked": {
            "type": "keyword"
          },
          "disliked": {
            "type": "keyword"
          },
          "indifferent": {
            "type": "keyword"
          },
          "all_rated": {
            "type": "keyword"
          },
          "years": {
            "type": "integer"
          },
          "median_yr": {
            "type": "keyword"
          },
          "popular_yr": {
            "type": "keyword"
          },
          "median_decade": {
            "type": "keyword"
          },
          "popular_decade": {
            "type": "keyword"
          },
          "title": {
            "type": "text",
            "fields":{
              "raw": {
                "type":  "keyword"
              }
            }
          }
        },
        "_all": {
          "enabled": true
        }
      }
    }
}